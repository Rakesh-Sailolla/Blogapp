<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Post | BlogSphere</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
  <style>
      .navbar-brand {
      font-weight: 700;
      color: #007bff !important;
    }
    footer {
      margin-top: auto;
      background-color: #ffffff;
      color: #333;
      text-align: center;
      padding: 20px 0;
      border-top: 1px solid #ddd;
    }
  </style>
</head>

<body class="bg-light">

  <!-- Navbar -->
  <!-- <%- include("includes/navbar") %> -->
   <nav class="navbar navbar-expand-lg bg-white shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="/posts">BlogSphere</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/posts/new">Create Blog</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About Us</a></li>
          <% if (!currentUser) { %>
            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
            <li class="nav-item"><a class="nav-link" href="/signup">Sign Up</a></li>
          <% } else { %>
            <form action="/logout?_method=POST" method="POST" class="d-inline">
              <button type="submit" class="btn btn-link nav-link">Logout</button>
            </form>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-5 mb-5">
    <h1 class="mb-4 text-center">‚úèÔ∏è Edit Blog Post</h1>

    <div class="card shadow-sm">
      <div class="card-body">

        <!-- üî• enctype IS REQUIRED -->
        <form
          action="/posts/<%= post._id %>/edit"
          method="POST"
          enctype="multipart/form-data"
          class="needs-validation"
          novalidate
        >

          <!-- Title -->
          <div class="mb-3">
            <label class="form-label">Title</label>
            <input
              type="text"
              name="title"
              class="form-control"
              value="<%= post.title %>"
              required
            >
            <div class="invalid-feedback">Please enter a title.</div>
          </div>

          <!-- Content -->
          <div class="mb-3">
            <label class="form-label">Content</label>
            <textarea
              name="content"
              class="form-control"
              rows="5"
              required
            ><%= post.content %></textarea>
            <div class="invalid-feedback">Please enter content.</div>
          </div>

          <!-- Type -->
          <div class="mb-3">
            <label class="form-label">Type</label>
            <input
              type="text"
              name="type"
              class="form-control"
              value="<%= post.type %>"
            >
          </div>

          <!-- Current Image -->
          <% if (post.image && post.image.url) { %>
            <div class="mb-3">
              <label class="form-label">Current Image</label>
              <img
                src="<%= post.image.url %>"
                class="img-fluid rounded mb-2"
                alt="Post image"
              >
            </div>
          <% } %>

          <!-- üî• Upload New Image -->
          <div class="mb-3">
            <label class="form-label">Upload New Image</label>
            <input
              type="file"
              name="image"
              class="form-control"
              accept="image/*"
            >
            <div class="form-text">
              Leave empty to keep the current image
            </div>
          </div>

          <!-- Buttons -->
          <button type="submit" class="btn btn-success w-100">
            üíæ Save Changes
          </button>

          <a
            href="/posts/<%= post._id %>"
            class="btn btn-secondary w-100 mt-2"
          >
            Cancel
          </a>

        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Validation -->
  <script>
    (() => {
      'use strict';
      const forms = document.querySelectorAll('.needs-validation');
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    })();
  </script>

</body>
</html>
